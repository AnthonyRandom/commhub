# Environment Configuration for CommHub Server
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL="postgresql://commhub_user:commhub_password@localhost:5432/commhub?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:1420"

# HTTPS Configuration (for production)
HTTPS_ENABLED=false
SSL_KEY_PATH=""
SSL_CERT_PATH=""

# Redis Configuration (optional, for session management)
REDIS_URL="redis://localhost:6379"

# Rate Limiting (requests per minute)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# WebRTC Signaling (for voice chat)
SIGNALING_PORT=3001
